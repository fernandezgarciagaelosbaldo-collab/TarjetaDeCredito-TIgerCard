@{
    ViewData["Title"] = "Registrar compra";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4">
            <h4>Registrar compra</h4>
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label class="form-label">Monto</label>
                    <input name="monto" type="number" step="0.01" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Categoría</label>
                    <input name="categoria" type="text" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <input name="descripcion" type="text" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Realizar compra</button>
                <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                <div asp-validation-summary="All" class="text-danger mt-2"></div>
            </form>
        </div>
    </div>
</div>
